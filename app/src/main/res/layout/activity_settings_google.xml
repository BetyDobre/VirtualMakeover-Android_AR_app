<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopActivities.SettingsActivity">

    <RelativeLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/close_settings_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/close_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/close_settings_img"
            />
        <TextView
            android:id="@+id/update_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/app_bar_settings"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profile_image"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:text="Email"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/settings_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_textview"
        android:hint="Email..."
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/fullname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_email"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="Full name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname_textview"
        android:hint="Full name..."
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_full_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="Address"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/settings_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_textview"
        android:hint="Address..."
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:backgroundTint="@color/colorPrimary"
        />
    <Button
        android:id="@+id/settings_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_address"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:text="Delete account"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
</ScrollView>