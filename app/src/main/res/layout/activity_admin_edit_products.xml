<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".adminActivities.AdminEditProductsActivity"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/product_image_edit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center"
            android:layout_marginTop="2dp"
            />

        <EditText
            android:id="@+id/product_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/product_image_edit"
            />


        <EditText
            android:id="@+id/product_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_edit"
            android:hint="Product description"
            android:textAlignment="center"
            android:textSize="16sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/product_price_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_description_edit"
            android:hint="Product price"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            />

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price_edit"
            android:text="Save changes"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin = "5dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/apply_changes_btn"
            android:text="Delete product"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_marginTop = "30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>