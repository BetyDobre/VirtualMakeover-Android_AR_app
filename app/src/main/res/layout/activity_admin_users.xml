<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userActivities.UserOrdersActivity">

    <RelativeLayout
        android:id="@+id/rll12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_to_current_orders_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/back_to_current_orders_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_toRightOf="@id/back_to_current_orders_img"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/users_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Users"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rll12">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/google_users_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logged in with Google users:"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:layout_below="@id/users_list"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/google_users_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/google_users_txt">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
</ScrollView>