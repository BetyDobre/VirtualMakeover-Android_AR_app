<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/rll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total price: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/loading_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:src="@drawable/loading"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/delivery_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:src="@drawable/delivery"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/empty_cart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:src="@drawable/emptycart"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/msg1"
        android:layout_below="@id/loading_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:visibility="invisible"
        android:text="Congratulations, your order has been shipped successfully. You will receive your products soon and then you can place another order."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rll1"
        android:layout_above="@+id/next_btn">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_margin="1dp"
        />

</RelativeLayout>