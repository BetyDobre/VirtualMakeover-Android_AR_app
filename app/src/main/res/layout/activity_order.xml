<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="vertical"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <RelativeLayout
        android:id="@+id/rll10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back_to_cart_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/back_to_cart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_toRightOf="@id/back_to_cart_img"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/delivery_guy_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/deliveryguy"
        android:layout_below="@id/rll10"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your shippment details"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/delivery_guy_image"
        />

    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your name..."
        android:backgroundTint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/shippment_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_name"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your phone number..."
        android:backgroundTint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/shippment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_phone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Shippment address..."
        android:backgroundTint="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/shippment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Shippment city..."
        android:backgroundTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/payment_method_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shippment_city"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Choose your payment method:"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        />

    <RadioGroup
        android:id="@+id/payment_method_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_method_txt"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/card_at_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card at delivery"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/cash_at_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash at delivery"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"/>
    </RadioGroup>

    <Button
        android:id="@+id/place_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_method_radiogroup"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="Place order"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        />
</RelativeLayout>
</ScrollView>